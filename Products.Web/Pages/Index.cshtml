@page
@model Products.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Products";
}

<h1 class="mb-3">Products</h1>

<form method="post" asp-page-handler="Add" class="mb-4">
    <div class="mb-2">
        <label for="Name">Name</label><br />
        <input id="Name" name="Name" value="@Model.Name" />
        <div style="color:red">@Html.ValidationMessage("Name")</div>
    </div>

    <div class="mb-2">
        <label for="Price">Price</label><br />
        <input id="Price" name="Price" type="number" step="0.01" value="@Model.Price" />
        <div style="color:red">@Html.ValidationMessage("Price")</div>
    </div>

    <div class="mb-2">
        <label for="Category">Category</label><br />
        <input id="Category" name="Category" value="@Model.Category" />
        <div style="color:red">@Html.ValidationMessage("Category")</div>
    </div>

    <button type="submit">Add</button>
</form>

<table border="1" cellpadding="6" cellspacing="0">
    <thead>
        <tr>
            <th style="text-align:left">Id</th>
            <th style="text-align:left">Name</th>
            <th style="text-align:right">Price</th>
            <th style="text-align:left">Category</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var p in Model.Products)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.Name</td>
            <td style="text-align:right">@p.Price</td>
            <td>@p.Category</td>
        </tr>
    }
    </tbody>
</table>

